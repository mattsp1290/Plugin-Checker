<!DOCTYPE html>
<html>
<head>
  <title>Plugin</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
  <div class="row-fluid">
    <div id="messages" class="span12">
      <% klass = "nothing" %>
        <% if name == :notice %>
          <% klass = "alert alert-success" %>
        <% elsif (name == :error) || (name == :alert) %>
          <% klass = "alert alert-error" %>
       <% end %>
			
      <%= content_tag :div, sanitize(msg), :class => klass, :id => "flash_#{name}" %>
	    
    </div>
  </div>
<% end %>
<div class="container">
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>